{
  "version": "4.0.2-next.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": "*",
      "ignoreChanges": [
        "**/test/**",
        "**/*.md"
      ],
      "forcePublish": true,
      "npmClient": "yarn",
      "message": "chore(release): publish %s"
    },
    "version": "fixed"
  },
  "packages": [
    "packages/*",
    "examples/*",
    "docs/*"
  ]
}
