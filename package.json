{
  "name": "esp-js-root-package",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean --sort --stream",
    "dev": "lerna run dev --parallel",
    "build-dev": "lerna run build-dev --sort --stream",
    "build-prod": "lerna run build-prod --sort --stream",
    "build-pack": "lerna run build-pack --sort --stream",
    "test": "lerna run test --stream --sort",
    "create-package": "nps create-package",
    "trash": "nps trash",
    "release-major": "yarn clean && yarn build-prod && lerna publish major",
    "release-minor": "yarn clean && yarn build-prod && lerna publish minor",
    "release-patch": "yarn clean && yarn build-prod && lerna publish patch",
    "pre-release-major": "yarn clean && yarn build-prod && lerna publish premajor --preid next --dist-tag next",
    "pre-release-minor": "yarn clean && yarn build-prod && lerna publish preminor --preid next --dist-tag next",
    "pre-release-patch": "yarn clean && yarn build-prod && lerna publish prepatch --preid next --dist-tag next"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@types/classnames": "2.2.9",
    "@types/enzyme": "3.10.5",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "25.1.3",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.23",
    "@types/uuid": "7.0.0",
    "awesome-typescript-loader": "^5.2.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-loader": "3.0.3",
    "expect": "^25.1.0",
    "html-webpack-plugin": "3.2.0",
    "inject-loader": "4.0.1",
    "is-os": "^1.0.1",
    "jasmine-core": "3.5.0",
    "jest": "25.1.0",
    "jsdoc-to-markdown": "^5.0.3",
    "lerna": "^3.13.1",
    "nps": "^5.9.12",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "prop-types": "^15.7.2",
    "regenerator-runtime": "^0.13.2",
    "script-loader": "0.7.2",
    "sinon": "9.0.0",
    "source-map-loader": "0.2.4",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "6.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-loader": "^3.6.0",
    "typescript": "3.8.3",
    "webpack": "4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-log": "^3.0.1"
  }
}
