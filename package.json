{
  "name": "esp-js-root-package",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean --sort --stream",
    "dev": "lerna run dev --parallel",
    "build-dev": "yarn clean && lerna run build-dev --sort --stream",
    "build-prod": "yarn clean && lerna run build-prod --sort --stream",
    "build-pack": "yarn clean && lerna run build-pack --sort --stream",
    "test": "lerna run test --stream --sort",
    "create-package": "nps create-package",
    "trash": "nps trash",
    "release-minor": "yarn clean && yarn build-prod && lerna publish minor",
    "release-major": "yarn clean && yarn build-prod && lerna publish major",
    "release-patch": "yarn clean && yarn build-prod && lerna publish patch",
    "pre-release-major": "yarn clean && yarn build-prod && lerna publish premajor --preid next --dist-tag next",
    "pre-release-minor": "yarn clean && yarn build-prod && lerna publish preminor --preid next --dist-tag next",
    "pre-release-patch": "yarn clean && yarn build-prod && lerna publish prepatch --preid next --dist-tag next",
    "start-sample": "lerna run start --scope esp-js-ui-module-based-app --stream"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/classnames": "2.2.10",
    "@types/enzyme": "3.10.5",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "26.0.0",
    "@types/query-string": "6.3.0",
    "@types/react": "16.9.36",
    "@types/uuid": "^8.3.0",
    "awesome-typescript-loader": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "cross-env": "^7.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "7.2.0",
    "eslint-loader": "4.0.2",
    "expect": "^26.0.1",
    "html-webpack-plugin": "4.3.0",
    "inject-loader": "4.0.1",
    "is-os": "^1.0.1",
    "jasmine-core": "3.5.0",
    "jest": "^26.0.1",
    "jsdoc-to-markdown": "^6.0.1",
    "lerna": "^3.13.1",
    "nps": "^5.9.12",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "prop-types": "^15.7.2",
    "regenerator-runtime": "^0.13.2",
    "script-loader": "0.7.2",
    "sinon": "9.0.2",
    "source-map-loader": "1.1.3",
    "terser-webpack-plugin": "^3.0.4",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-loader": "^3.6.0",
    "typescript": "3.9.5",
    "webpack": "4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-log": "^3.0.1"
  }
}
